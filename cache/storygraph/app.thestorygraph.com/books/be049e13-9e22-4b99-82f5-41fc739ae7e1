  <script>
    var loadingHtml = `<div class="col-span-2 text-center">${document.getElementById("hidden-spinner").innerHTML}</div>`;

    function updateTabStyles(link, isActive) {
      if (isActive) {
        link.classList.remove("cursor-pointer", "pointer-events-auto", "border-transparent", "font-light", "text-sm");
        link.classList.add("cursor-default", "pointer-events-none", "border-darkerGrey", "dark:border-lightGrey", "font-medium");
      } else {
        link.classList.remove("cursor-default", "pointer-events-none", "border-darkerGrey", "dark:border-lightGrey", "font-medium");
        link.classList.add("cursor-pointer", "pointer-events-auto", "border-transparent", "font-light", "text-sm");
      }
    }

    document.addEventListener("turbo:load", () => {
      var turboFrame = document.getElementById("hidden-personalized-preview");

      document.querySelectorAll("[data-personalized]").forEach(link => {
        link.addEventListener("click", (e) => {
          e.preventDefault();

          var bookId = e.target.getAttribute("data-book-id");
          var personalized = e.target.getAttribute("data-personalized") === 'true';

          document.getElementById(`personalized-preview-desktop-${bookId}`).innerHTML = loadingHtml;
          document.getElementById(`personalized-preview-mobile-${bookId}`).innerHTML = loadingHtml;

          var newSrc = `/personalized-preview.turbo_stream?book_id=be049e13-9e22-4b99-82f5-41fc739ae7e1&personalized=false`.replace('false', personalized);
          turboFrame.setAttribute("src", newSrc);

          document.querySelectorAll(`[data-personalized='${personalized}']`).forEach(el => {
            updateTabStyles(el, true);
          });
          document.querySelectorAll(`[data-personalized='${!personalized}']`).forEach(el => {
            updateTabStyles(el, false);
          });
        });
      });
    });
  </script>


